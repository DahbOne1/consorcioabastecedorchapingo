---
import Logo from './icons/Logo.astro'


---
<div class="hidden sm:block">
    <header class="flex justify-between items-center  w-full mx-auto text-[#23467b] font-bold text-md">     
        <div class="w-full flex justify-between items-center mx-auto ">
            <Logo></Logo>
            <nav class="flex flex-row justify-center gap-x-6">
                <a href="/#nosotros" class="relative after:bg-[#23467b] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">NOSOTROS</a>
                <a href="/#servicios" class="relative after:bg-[#23467b] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">SERVICIOS</a>
                <a href="/#proyectos" class="relative after:bg-[#23467b] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">PROYECTOS</a>
                <a href="/#contacto" class="relative after:bg-[#23467b] after:absolute after:h-0.5 after:w-0 after:-bottom-0.5 after:left-0 hover:after:w-full after:transition-all after:duration-100">CONTACTO</a> 
            </nav>
        </div>
        
    </header>
</div>


<div class="sm:hidden">
    <header class="w-full mx-auto  text-blue-100/70 text-md fixed z-10 top-0 inset">     

        <div id="nav" class="hidden">
            <nav class="text-center flex flex-col justify-center gap-20 px-6 py-10 mx-auto text-2xl bg-neutral-900/80 backdrop-blur-lg">
                <a class="link" href="/#nosotros">Nosotros</a>
                <a class="link" href="/#servicios">Servicios</a>
                <a class="link" href="/#proyectos">Proyectos</a>
                <a class="link" href="/#contacto">Contacto</a> 
            </nav>
        </div>
        
    </header>
</div>

